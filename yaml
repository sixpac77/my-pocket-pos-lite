name: Build My Pocket POS (Lite)

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-22.04

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Install system deps
        run: |
          sudo apt-get update
          sudo apt-get install -y \
            build-essential git zip unzip libffi-dev libssl-dev \
            libgl1-mesa-dev libgles2-mesa-dev \
            libjpeg-dev zlib1g-dev libfreetype6-dev \
            liblcms2-dev libopenjp2-7-dev \
            python3 python3-dev python3-pip python3-setuptools \
            openjdk-17-jdk pkg-config

      - name: Install buildozer
        run: |
          python3 -m pip install --upgrade pip
          python3 -m pip install cython==0.29.36 virtualenv
          python3 -m pip install buildozer

      - name: Cache .buildozer
        uses: actions/cache@v4
        with:
          path: .buildozer
          key: buildozer-${{ runner.os }}-${{ hashFiles('buildozer.spec') }}
          restore-keys: |
            buildozer-${{ runner.os }}-

      - name: Build debug APK
        env:
          JAVA_HOME: /usr/lib/jvm/java-17-openjdk-amd64
        run: |
          export PATH=$PATH:~/.local/bin
          buildozer android debug

      - name: Upload APK
        uses: actions/upload-artifact@v4
        with:
          name: MyPocketPOSLite-debug
          path: bin/*.apk
